<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="#D8D8D8"
    tools:context=".DatosIncendioActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Coordenadas INCENDIO"
        android:gravity="center"
        android:textSize="20dp"
        android:padding="8dp"
        android:textColor="#FFFFFF"
        android:background="#7CB521"/>

    <TextView
        android:id="@+id/tvCoord"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:textColor="#000000"
        android:textSize="18dp"
        android:gravity="center"
        android:text="Coordenadas" />

    <TextView
        android:id="@+id/tvHumo"
        android:text="COLOR DEL HUMO"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="20dp"
        android:background="#FAAC58"
        android:layout_marginTop="40dp"/>

    <Spinner
        android:id="@+id/spiHumo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvHumo"
        android:layout_margin="10dp"
        android:entries="@array/humos"/>

    <TextView
        android:id="@+id/tvVegetacion"
        android:text="TIPO DE VEGETACION"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="20dp"
        android:background="#FAAC58"
        android:layout_marginTop="20dp"/>

    <Spinner
        android:id="@+id/spiVegetacion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvVegetacion"
        android:layout_margin="10dp"/>

    <TextView
        android:id="@+id/tvColumna"
        android:text="COLUMNA"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="20dp"
        android:background="#FAAC58"
        android:layout_marginTop="20dp"/>

    <Spinner
        android:id="@+id/spiColumna"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvColumna"
        android:layout_margin="10dp"/>

    <Button
        android:id="@+id/enviarAviso"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enviar Aviso"
        android:textSize="20dp"
        android:layout_marginTop="90dp"
        android:textColor="#FFFFFF"
        android:background="@drawable/button_relleno"/>

</LinearLayout>