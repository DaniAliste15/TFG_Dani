<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="#D8D8D8"
    tools:context=".ValidacionActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Compruebe los datos"
        android:gravity="center"
        android:textSize="20dp"
        android:padding="8dp"
        android:textColor="#000000"
        android:background="#7CB521"/>

    <TextView
        android:id="@+id/humo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:textColor="#000000"
        android:textSize="20dp"
        android:background="#FAAC58"
        android:gravity="center"
        android:text="Tipo de humo"/>

    <TextView
        android:id="@+id/tvHumo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:textColor="#000000"
        android:textSize="18dp"
        android:gravity="center"
        android:layout_below="@+id/humo"/>

    <TextView
        android:id="@+id/vegetacion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:textColor="#000000"
        android:textSize="20dp"
        android:background="#FAAC58"
        android:gravity="center"
        android:text="Tipo de vegetacion"/>

    <TextView
        android:id="@+id/tvVegetacion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:textColor="#000000"
        android:textSize="18dp"
        android:gravity="center"
        android:layout_below="@+id/vegetacion"/>

    <TextView
        android:id="@+id/columna"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:textColor="#000000"
        android:textSize="20dp"
        android:background="#FAAC58"
        android:gravity="center"
        android:text="Tipo de columna"/>

    <TextView
        android:id="@+id/tvColumna"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:textColor="#000000"
        android:textSize="18dp"
        android:gravity="center"
        android:layout_below="@+id/columna"/>

    <TextView
        android:id="@+id/latilongi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:textColor="#000000"
        android:textSize="20dp"
        android:background="#FAAC58"
        android:gravity="center"
        android:text="Coordenadas"
        android:layout_below="@+id/tvColumna"/>

    <TextView
        android:id="@+id/tvCoordenadas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:textColor="#000000"
        android:textSize="18dp"
        android:gravity="center"
        android:layout_below="@+id/columna"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:textColor="#000000"
        android:gravity="center"
        android:text="Si esta seguro ,envie el aviso"
        android:textSize="18dp"/>

    <Button
        android:id="@+id/enviarAviso"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enviar Aviso"
        android:textSize="20dp"
        android:layout_marginTop="80dp"
        android:textColor="#FFFFFF"
        android:background="@drawable/button_relleno"/>

</LinearLayout>